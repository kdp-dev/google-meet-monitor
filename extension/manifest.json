{
  "name": "Google Meet Monitor",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Get notifications of who's in a Google Meet meeting",
  "homepage_url": "https://meet.google.com/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "background": {
    "service_worker": "js/service_worker.js"
  },
  "permissions": [
    "notifications"
  ],
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ]
}